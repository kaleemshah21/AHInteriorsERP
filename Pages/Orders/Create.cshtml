@page
@model AHInteriorsERP.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Order.CustomerID" class="control-label"></label>
                <select asp-for="Order.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Order.Status" class="control-label"></label>
                <input asp-for="Order.Status" class="form-control" aria-required="true" />
                <span asp-validation-for="Order.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order.Notes" class="control-label"></label>
                <input asp-for="Order.Notes" class="form-control" />
                <span asp-validation-for="Order.Notes" class="text-danger"></span>
            </div>

            
            <input type="hidden" asp-for="Order.OrderDate" />
        </div>

        <div class="col-md-8">
            <h5 class="mb-2">Products</h5>
            <p class="text-muted">Enter quantities for one or more products.</p>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Product</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Stock</th>
                            <th class="text-end" style="width:160px;">Qty</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Products.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Model.Products[i].SKU
                                    <input type="hidden" asp-for="Items[i].ProductID" value="@Model.Products[i].ProductID" />
                                </td>
                                <td>@Model.Products[i].ProductName</td>
                                <td class="text-end">£@Model.Products[i].BasePrice.ToString("0.00")</td>
                                <td class="text-end">@Model.Products[i].StockQuantity</td>
                                <td class="text-end">
                                    <input asp-for="Items[i].Quantity" class="form-control text-end" />
                                    <span asp-validation-for="Items[i].Quantity" class="text-danger"></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
